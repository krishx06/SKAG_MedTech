# AdaptiveCare Environment Configuration
# Copy this file to .env and fill in your values

# Debug mode (set to false in production)
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000

# Anthropic Claude API Key (required for LLM explanations)
ANTHROPIC_API_KEY=your_api_key_here

# LLM Configuration
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.3

# MCDA Weights (must sum to 1.0)
RISK_WEIGHT=0.4
CAPACITY_WEIGHT=0.3
WAIT_TIME_WEIGHT=0.2
RESOURCE_WEIGHT=0.1

# Decision Thresholds
ESCALATE_THRESHOLD=0.75
OBSERVE_THRESHOLD=0.5
LOW_CAPACITY_THRESHOLD=0.3
CONFIDENCE_THRESHOLD=0.6
HIGH_RISK_THRESHOLD=70.0
CRITICAL_RISK_THRESHOLD=85.0

# Agent Configuration
AGENT_TICK_INTERVAL=1.0
WEBSOCKET_HEARTBEAT=30
