# AdaptiveCare Environment Configuration
# Copy this file to .env and fill in your values

# Debug mode (set to false in production)
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000

# Google Gemini API Key (FREE - get from https://aistudio.google.com/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash  # Fast and free (recommended for hackathon)
# LLM_MODEL=gemini-2.5-pro  # More capable, slightly slower
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.3

# MCDA Weights (must sum to 1.0)
RISK_WEIGHT=0.4
CAPACITY_WEIGHT=0.3
WAIT_TIME_WEIGHT=0.2
RESOURCE_WEIGHT=0.1

# Decision Thresholds
ESCALATE_THRESHOLD=0.75
OBSERVE_THRESHOLD=0.5
LOW_CAPACITY_THRESHOLD=0.3
CONFIDENCE_THRESHOLD=0.6
HIGH_RISK_THRESHOLD=70.0
CRITICAL_RISK_THRESHOLD=85.0

# Agent Configuration
AGENT_TICK_INTERVAL=1.0
WEBSOCKET_HEARTBEAT=30
